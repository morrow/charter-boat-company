<%= form_for @boat, :html => { :multipart => true } do |f| %>

  <div class='field'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class='field'>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class='field'>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class='field'>
    <%= f.label :length %>
    <%= f.number_field :length %>
  </div>

  <div class='field'>
    <%= f.label :passengers %>
    <%= f.number_field :passengers %>
  </div>

  <%= f.submit %>
<% end %>
