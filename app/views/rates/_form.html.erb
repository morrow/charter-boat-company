<%= form_for @rate do |f| %>

  <div class='field'>
    <%= f.label :boat_id %>
    <%= f.collection_select(:boat_id, Boat.all, :id, :name) %>
  </div>

  <div class='field'>
    <%= f.label :full_day %>
    <%= f.text_field :full_day %>
  </div>

  <div class='field'>
    <%= f.label :full_day_pax %>
    <%= f.text_field :full_day_pax %>
  </div>

  <div class='field'>
    <%= f.label  :half_day %>
    <%= f.text_field :half_day %>
  </div>
  <div class='field'>
    <%= f.label :half_day_pax %>
    <%= f.text_field :half_day_pax %>
  </div>

  <div class='field'>
    <%= f.label :night %>
    <%= f.text_field :night %>
  </div>

  <div class='field'>
    <%= f.label :night_pax %>
    <%= f.text_field :night_pax %>
  </div>

  <div class='field'>
    <%= f.label :discount %>
    <%= f.text_field :discount %>
  </div>

  <div class='field'>
    <%= f.label :start %>
    <%= f.date_field :start %>
  </div>

  <div class='field'>
    <%= f.label :end %>
    <%= f.date_field :end %>
  </div>

  <div class='field'>
    <%= f.label :active %>
    <%= f.check_box :active %>
  </div>

  <%= f.submit %>

<% end %>
